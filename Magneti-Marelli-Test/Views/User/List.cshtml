@model IEnumerable<Magneti_Marelli_Test.Models.User>

@using Magneti_Marelli_Test.Utility;

@{
    ViewBag.Title = "UsersList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <div class="row">
        <div class="col-xs-12">

            <h1 class="page-header text-center">
                Welcome <span>@User.Identity.Name</span>
            </h1>

            <p class="h3 page-subheader text-center">You are member of: </p>

            <p class="page-subheader text-center">Gruppo 1</p>
            <p class="page-subheader text-center">Gruppo 2</p>
            <p class="page-subheader text-center">Gruppo 3</p>

        </div>
    </div>
</div>

<div>
    <div class="row">
        <div class="col-xs-12">

            <h1 class="page-header text-center">
                Find &amp; Add <span>User</span>
            </h1>

            <div class="col-xs-6 col-xs-offset-3">
                @using (Html.BeginForm("Query", "user", FormMethod.Post, new { @class = "col-xs-8" }))
                {

                    <span class="input-group">
                       
                        <input type="text" name="qry" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                                <input type="submit" value="Search" class="btn btn-default" >
                        </span>
                        
                    </span>
                }
                <span class="col-xs-4">
                    @Ajax.RawActionLink(string.Format("<i class='fa fa-user-plus'></i> Add User"), "AddUser", "User",null, new AjaxOptions { HttpMethod = "GET" }, new { @class = "btn btn-sm btn-default" })
                </span>
            </div>

        </div>
    </div> <!-- / .row -->
</div>
@* By default BeginForm use FormMethod.Post *@



<div class="table-responsive" style="margin-top:20px;">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.UserId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">
                        @Html.DisplayFor(modelItem => item.UserId)
                    </th>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", "User",new { id = item.UserId })" class="btn btn-sm btn-primary">
                            Edit User
                            <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                        </a>
                        <a href="@Url.Action("Delete", "User",new { id = item.UserId })" class="btn btn-sm btn-danger">
                            Delete User
                            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


